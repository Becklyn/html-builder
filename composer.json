{
    "name": "becklyn/html-builder",
    "type": "library",
    "description": "Simple helpers for building HTML",
    "homepage": "https://github.com/Becklyn/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Becklyn Studios",
            "homepage": "http://becklyn.com/"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "becklyn/php-cs": "^2.0.2",
        "symfony/phpunit-bridge": "^4.3.8"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Becklyn\\HtmlBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Becklyn\\HtmlBuilder\\": "tests/"
        }
    }
}
